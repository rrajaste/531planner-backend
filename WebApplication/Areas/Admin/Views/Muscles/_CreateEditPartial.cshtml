@model MuscleCreateEditViewModel

<div asp-validation-summary="All" class="text-danger"></div>
<div class="form-group">
    <label asp-for="Muscle.Name" class="control-label"></label>
    <input asp-for="Muscle.Name" class="form-control" />
    <span asp-validation-for="Muscle.Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Muscle.Description" class="control-label"></label>
    <input asp-for="Muscle.Description" class="form-control" />
    <span asp-validation-for="Muscle.Description" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Muscle.MuscleGroup" class="control-label"></label>
    <select asp-for="Muscle.MuscleGroupId" class ="form-control" asp-items="@Model.MuscleGroupSelectList"></select>
</div>

<div class="form-group">
    <input type="submit" value="@Resources.Views.Muscle._CreateEditPartial.Submit" class="btn btn-primary" />
</div>