@using Resources.Views.Accounts
@model WebApplication.Areas.Admin.ViewModels.AppUsersViewModel

<a data-toggle="modal"
   title="@_LockUserPartial.HoverText" data-target="#modal-lock-@Model.UserName" asp-action="LockUser">
    <i class="fa fa-lock text-danger mx-1" aria-hidden="true"></i>
</a>

<div class="modal fade" id="modal-lock-@Model.UserName" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title text-center text-danger" id="deleteModalLabel">
                    @_LockUserPartial.ConfirmationText
                </h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h5>@_LockUserPartial.Username: @Model.UserName</h5>
                <h5>@_LockUserPartial.Email: @Model.Email</h5>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">
                    @_LockUserPartial.Close
                </button>
                <form asp-action="LockUser">
                    <input type="hidden" asp-for="@Model.UserName"/>
                    <input type="hidden" name="returnUrl" value="@Context.Request.Path@Context.Request.QueryString"/>
                    <button type="submit" class="text-uppercase btn btn-danger">
                        @_LockUserPartial.Lock
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>