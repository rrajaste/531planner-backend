@model WorkoutRoutineCreateEditViewModel

@{
    ViewData["Title"] = "Edit base routine";
}

<div class="jumbotron shadow rounded pb-1">
    <h1>EDIT BASE ROUTINE</h1>
    <p class="text-muted">Use this page to edit the name and type of a workout routine</p>
    <hr/>
    <div class="row justify-content-center">
        <div class="col-md-4">
            <form asp-action="Edit">
                <input type="hidden" asp-for="WorkoutRoutine.Id"/>
                <partial name="_CreateEditPartial"/>
            </form>
        </div>
    </div>
    <hr/>
        <a class="btn btn-link mx-1" asp-action="Index" title="Back to workout routines list">BACK TO LIST</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
