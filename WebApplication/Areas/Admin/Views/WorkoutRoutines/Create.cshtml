@model WorkoutRoutineCreateEditViewModel

@{
    ViewData["Title"] = "Create new base routine";
}

<div class="jumbotron shadow rounded pb-1">
    <h1 class="text-uppercase">@Resources.Views.WorkoutRoutine.Create.Title</h1>
    <p class="text-muted">
        @Resources.Views.WorkoutRoutine.Create.SubText
    </p>
    <hr/>
    <div class="row justify-content-center">
        <div class="col-md-4">
            <form asp-action="Create">
                <partial name="_CreateEditPartial"/>                                
            </form>
        </div>
    </div>
    <hr/>
    <a class="btn btn-link mx-1" asp-action="Index" title="Back to workout routines list">
        @Resources.Views.WorkoutRoutine.Create.BackToList
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}