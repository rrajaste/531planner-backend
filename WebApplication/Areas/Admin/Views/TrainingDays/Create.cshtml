@model WebApplication.Areas.Admin.ViewModels.TrainingDayCreateEditViewModel

@{
    ViewData["Title"] = "Create";
}
<div class="jumbotron shadow rounded text-center">
    
    <h3 class="text-uppercase">@Resources.Views.TrainingDay.Edit.Title</h3>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-4 d-flex">
            <form asp-action="Create">
                <partial name="_CreateEditPartial"/>
            </form>
        </div>
    </div>
    <hr/>
    <div>
        <a class="text-uppercase" 
           title="@Resources.Views.TrainingDay.Edit.BackToListHoverText"
           asp-controller="TrainingWeeks" asp-action="Index" asp-route-id="@Model.WorkoutRoutineId">
            @Resources.Views.TrainingDay.Edit.BackToList
        </a>
    </div>

</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
