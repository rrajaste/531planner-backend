@using Resources.Views.TrainingDay
@model BLL.App.DTO.ExerciseInTrainingDay

<a data-toggle="modal" data-target="#modal-delete-id-@Model.Id" asp-action="Delete" asp-route-id="@Model.Id"
   title="@_ExerciseDeletePartial.HoverText">
    <i class="fas fa-trash small delete text-danger ml-1 small"></i>
</a>

<div class="modal fade" title="Delete" id="modal-delete-id-@Model.Id" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title text-center text-danger" id="deleteModalLabel">
                    @_ExerciseDeletePartial.ConfirmationText
                </h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p title="@Model.Exercise?.Description">@Model.Exercise?.Name</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">
                    @_ExerciseDeletePartial.Close
                </button>
                <form asp-controller="ExerciseInTrainingDay" asp-action="Delete">
                    <input type="hidden" value="@Model.Id" name="Id"/>
                    <button type="submit" class="btn btn-danger">
                        @_ExerciseDeletePartial.Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>