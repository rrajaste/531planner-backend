@model WebApplication.Areas.Admin.ViewModels.TrainingDayCreateEditViewModel

<div asp-validation-summary="All" class="text-danger"></div>
<input type="hidden" asp-for="TrainingDay.TrainingWeekId"/>
<div class="form-group">
    <label asp-for="@Model.TrainingDay.Date" class="control-label"></label>
    <input asp-for="@Model.TrainingDay.Date" class="form-control" />
    <span asp-validation-for="@Model.TrainingDay.Date" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="@Model.TrainingDay.TrainingDayType" class="control-label"></label>
    <select asp-for="@Model.TrainingDay.TrainingDayTypeId" class ="form-control" asp-items="@Model.TrainingDayTypes"></select>
</div>
<div class="form-group">
    <input type="submit" value="Create" class="btn btn-primary" />
</div>
