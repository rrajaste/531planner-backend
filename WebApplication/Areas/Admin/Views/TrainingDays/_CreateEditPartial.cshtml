@using Resources.Views.TrainingDay
@model WebApplication.Areas.Admin.ViewModels.TrainingDayCreateEditViewModel

<div asp-validation-summary="All" class="text-danger"></div>
<input type="hidden" asp-for="TrainingDay.TrainingWeekId"/>
<div class="form-group">
    <input type="hidden" asp-for="WorkoutRoutineId"/>
    <label asp-for="@Model.TrainingDay.DayOfWeek" class="control-label"></label>
    <select asp-for="@Model.TrainingDay.DayOfWeek" asp-items="@Model.DaysOfWeek" class="form-control">
        <option value="" selected="selected"> @_CreateEditPartial.SelectDay </option>
    </select>
    <span asp-validation-for="@Model.TrainingDay.DayOfWeek" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="@Model.TrainingDay.TrainingDayType" class="control-label"></label>
    <select asp-for="@Model.TrainingDay.TrainingDayTypeId" class="form-control" asp-items="@Model.TrainingDayTypes">
        <option value=""> @_CreateEditPartial.SelectType </option>
    </select>
</div>
<div class="form-group">
    <input type="submit" value="Submit" class="btn btn-success"/>
</div>