@using Resources.Views.TrainingDay
@model WebApplication.Areas.Admin.ViewModels.TrainingDayCreateEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="jumbotron shadow rounded">
    <h1 class="text-uppercase">@Edit.Title</h1>
    <p class="text-muted">@Edit.SubText</p>
    <hr/>
    <div class="row justify-content-center">
        <div class="col-md-4">
            <form asp-action="Edit">
                <partial name="_CreateEditPartial"/>
                <input type="hidden" asp-for="@Model.TrainingDay.Id"/>
                <input type="hidden" asp-for="@Model.WorkoutRoutineId"/>
            </form>
        </div>
    </div>
    <hr/>
    <div class="text-uppercase">
        <a title="@Edit.BackToListHoverText"
           asp-controller="TrainingWeeks" asp-action="Index" asp-route-id="@Model.WorkoutRoutineId">
            @Edit.BackToList
        </a>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}