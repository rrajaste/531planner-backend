@model WebApplication.Areas.Admin.ViewModels.TrainingDayCreateEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="jumbotron shadow rounded">
    <h1 class="text-uppercase">Edit training day</h1>
    <p class="text-muted">Use this page to edit the day of week and type of a training day.</p>
    <hr />
<div class="row justify-content-center">
<div class="col-md-4">
    <form asp-action="Edit">
        <partial name="_CreateEditPartial"/>
        <input type="hidden" asp-for="@Model.TrainingDay.Id" />
        <input type="hidden" asp-for="@Model.WorkoutRoutineId" />
    </form>
</div>
</div>
    <hr/>
    <div class="text-uppercase">
        <a title="Back to training weeks list" asp-controller="TrainingWeeks" asp-action="Index" asp-route-id="@Model.WorkoutRoutineId">Back to list</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
