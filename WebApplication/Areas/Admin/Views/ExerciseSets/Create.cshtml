@using Resources.Views.ExerciseSet
@model WebApplication.Areas.Admin.ViewModels.ExerciseSetCreateEditViewModel

@{
    ViewData["Title"] = "Create";
}
<div class="jumbotron rounded shadow">
    <h3 class="text-uppercase">@CreateEdit.CreateTitle</h3>
    <hr/>
    <div class="row justify-content-center">
        <div class="col-md-4">
            <form asp-action="Create">
                <partial name="_CreateEditPartial"/>
            </form>
        </div>
    </div>
    <hr/>
    <a class="text-uppercase" asp-area="Admin" asp-controller="TrainingDays" asp-action="View" asp-route-id="@Model.TrainingDayId">
        @CreateEdit.BackToList
    </a>
    <div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}