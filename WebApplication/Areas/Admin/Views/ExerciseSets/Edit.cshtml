@model WebApplication.Areas.Admin.ViewModels.ExerciseSetCreateEditViewModel 

@{
    ViewData["Title"] = "Edit";
}

<div class="jumbotron rounded shadow">
<h3 class="text-uppercase">@Resources.Views.ExerciseSet.CreateEdit.EditTitle</h3>
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Edit">
            <partial name="_CreateEditPartial"/>
            <input type="hidden" asp-for="@Model.ExerciseSet.Id" />
        </form>
    </div>
</div>
    <hr/>

    <div>
        <a class="text-uppercase" asp-area="Admin" asp-controller="TrainingDays" asp-action="View" asp-route-id="@Model.TrainingDayId">
            @Resources.Views.ExerciseSet.CreateEdit.BackToList
        </a>
    </div>
    
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
