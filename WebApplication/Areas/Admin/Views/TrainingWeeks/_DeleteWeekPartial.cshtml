@model WebApplication.Areas.Admin.ViewModels.TrainingWeekViewModel

<a data-toggle="modal" title="Delete week" data-target="#modal-delete-id-@Model.TrainingWeek.Id" asp-action="Delete" asp-route-id="@Model.TrainingWeek.Id">
    <i class="fas fa-trash delete text-danger ml-1"></i>
</a>

<div class="modal fade" title="Delete" id="modal-delete-id-@Model.TrainingWeek.Id" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title text-center text-danger" id="deleteModalLabel">Are you sure you wish to premanently delete this?</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Week number: @Model.TrainingWeek.WeekNumber</p>
                <p>Training days: @Model.TrainingWeek.TrainingDays?.Count()</p>
                <p>Is deload: @if (Model.TrainingWeek.IsDeload)
                              {
                                  <span>yes</span>
                              }else{
                                  <span>no</span>
                              }</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="@Model.TrainingWeek.Id"/>
                    <input type="hidden" asp-for="@Model.WorkoutRoutineId"/>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>