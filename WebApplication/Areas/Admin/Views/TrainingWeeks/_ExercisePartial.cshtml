@using Extensions
@model BLL.App.DTO.ExerciseInTrainingDay


<p title="@Model.Exercise?.Description" class="font-weight-bold text-left m-0 border-bottom">@Model.Exercise?.Name</p>
@if (Model.WorkSets.IsEmptyOrNull() && Model.WarmUpSets.IsEmptyOrNull())
{
    <p class="text-muted mr-2 mt-2">@Resources.Views.TrainingWeeks._ExercisePartial.NoSets</p>
}
else
{
    <div class="text-left ml-3 text-secondary">
        @if (! Model.WarmUpSets.IsEmptyOrNull())
        {
            <p class="text-left m-0"><em>@Resources.Views.TrainingWeeks._ExercisePartial.WarmUp</em></p>
            @foreach (var set in Model.WarmUpSets!.OrderBy(set => set.SetNumber))
            {
                <span>- @set.NrOfReps x @set.Weight%</span><br/>
            }   
        }
    </div>
    <div class="text-left ml-3 text-secondary">
    @if (Model.WorkSets.IsEmptyOrNull())
    {
        <p>@Resources.Views.TrainingWeeks._ExercisePartial.NoSets</p>
    }
    else
    {
        <p class="text-left m-0"><em>@Resources.Views.TrainingWeeks._ExercisePartial.WorkSet</em></p>
        @foreach (var set in Model.WorkSets!.OrderBy(set => set.SetNumber))
        {
            <span>- @set.NrOfReps x @set.Weight%</span><br/>
        }   
    }
    </div>
}