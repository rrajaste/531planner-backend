@using System.Globalization
@using WebApplication.Areas.Admin.ViewModels
@model BLL.App.DTO.UserTrainingDay

<a class="view-edit-delete-small" asp-action="Delete" asp-controller="TrainingDays"
   data-toggle="modal" title="Delete training day" data-target="#modal-delete-day-id-@Model.Id">
    <i class="fa fa-trash delete text-danger" aria-hidden="true"></i>
</a>

<div class="modal fade" id="modal-delete-day-id-@Model.Id" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <form asp-controller="TrainingDays" asp-action="Delete">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title text-center text-danger" id="deleteModalLabel">Are you sure you wish to delete this?</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <h3>
                        @CultureInfo.CurrentUICulture.DateTimeFormat.GetDayName(@Model.Date.DayOfWeek)
                    </h3>
                    <h5 class="text-muted">
                        @Model.TrainingDayType?.Name
                    </h5>
                    <h5 class="text-muted">
                        Number of main lifts: @Model.MainLifts?.Count()
                    </h5>
                    <h5 class="text-muted">
                        Number of accessory lifts: @Model.AccessoryLifts?.Count()
                    </h5>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary text-uppercase" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-danger text-uppercase">Delete</button>
                    <input type="hidden" value="@Model.Id" name="@nameof(TrainingDayDeleteViewModel.TrainingDayId)"/>
                    <input type="hidden" asp-for="@Model.TrainingWeekId"/>
                </div>
            </div>
        </form>
    </div>
</div>
