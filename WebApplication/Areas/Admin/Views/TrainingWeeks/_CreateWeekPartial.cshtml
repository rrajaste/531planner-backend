@model WebApplication.Areas.Admin.ViewModels.TrainingWeekCreateViewModel

<form asp-action="Create">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="WorkoutRoutineId" value="@Model.WorkoutRoutineId"/>
    <div class="row">
        <div class="form-group mx-2">
            <input type="submit" class="btn btn-outline-success" title="Add a new empty week to workout routine" value="ADD NEW WEEK">
        </div>
        <div class="form-check my-2">
            <input class="form-check-input" asp-for="@Model.IsDeload">
            <label class="form-check-label text-secondary" title="Mark the training week as a deload week" asp-for="@Model.IsDeload">
            Deload?
            </label>
        </div>
    </div>
</form>
