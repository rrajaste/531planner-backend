@model Domain.BodyMeasurement

@{
    ViewData["Title"] = "Delete";
}

<h1>@Resources.Views.BodyMeasurements.Delete.Title</h1>

<h3>@Resources.Views.BodyMeasurements.Delete.ConfirmationText</h3>
<div>
    <partial name="_DetailsDeletePartial"/>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">@Resources.Views.BodyMeasurements.Delete.BackToList</a>
    </form>
</div>
