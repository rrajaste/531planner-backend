@model IEnumerable<Domain.BodyMeasurements>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Weight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Height)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Chest)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Waist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Arm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BodyFatPercentage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitsTypeId)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Height)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Chest)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Waist)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hip)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Arm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BodyFatPercentage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitsTypeId)
            </td>
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
